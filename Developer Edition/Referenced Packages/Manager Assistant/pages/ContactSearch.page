	<apex:outputPanel Id="JSON" styleClass="test" >
		<script>

			function reloadDivMap(){

				$('#map').remove();
				$('<div id="map" />').appendTo($('#content'));

			}



			function Setup(){
				$.mobile.changePage("#setup",{transition: "slide", changeHash: true});
			}

			function Back(){
