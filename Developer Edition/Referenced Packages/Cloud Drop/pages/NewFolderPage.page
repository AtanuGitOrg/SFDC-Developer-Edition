<apex:page standardController="Cloudrop__Cloud_Storage__c"   extensions="Cloudrop.NewFolderController"  tabStyle="Cloudrop__Cloud_Storage__c">
 <apex:sectionHeader title="Folder Edit" subtitle="{!HeaderName}" id="sheader"/>
 <apex:pageMessages />
 <apex:form >
 <apex:pageBlock title="Folder Edit">                      
               <apex:pageBlockButtons location="top">
                    <apex:commandButton value="Save" id="savebtn" action="{!save}"/>

                    <apex:commandButton value="Cancel" id="cancelbtn" action="{!cancle}"/>
               </apex:pageBlockButtons> 
 <apex:pageBlockSection title="Folder Information" columns="1">              
               
               <apex:inputField value="{!objCloudStorage.name}"/>
                 
              <apex:inputField value="{!objCloudStorage.Cloudrop__DescriptionNew__c}"/> 
              
</apex:pageBlockSection>

               
 </apex:pageBlock>  
 </apex:form> 
    
</apex:page>